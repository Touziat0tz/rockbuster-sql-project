-- Query: Top 10 Countries by Total Revenue
-- Purpose: Identify which countries generate the most revenue for Rockbuster.
-- Business Insight: Knowing the highest-revenue countries helps prioritize
-- expansion and marketing efforts for the upcoming streaming service launch.

WITH top_countries AS (
    SELECT 
        co.country,
        COUNT(c.customer_id) AS customer_count
    FROM customer c
    JOIN address a ON c.address_id = a.address_id
    JOIN city ci ON a.city_id = ci.city_id
    JOIN country co ON ci.country_id = co.country_id
    GROUP BY co.country
    ORDER BY customer_count DESC
    LIMIT 10
)
SELECT * 
FROM top_countries;
